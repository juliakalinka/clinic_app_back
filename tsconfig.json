{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
}